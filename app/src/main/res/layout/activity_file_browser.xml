<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.merlin.model.FileBrowserModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/test"
        android:layout_height="match_parent"
        android:padding="2dp">
        <TextView
            android:textColor="@color/textTitleSub"
            android:layout_height="wrap_content"
            android:id="@+id/fileBrowser_top"
            android:text="1"
            android:layout_width="wrap_content" />

        <com.merlin.view.DataListLayout
            android:id="@+id/fileBrowser_listDLV"
            android:layout_width="match_parent"
            binding:viewModel="@{vm}"
            android:layout_below="@id/fileBrowser_top"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</layout>
