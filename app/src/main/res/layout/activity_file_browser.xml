<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.merlin.model.FileBrowserModel" />
        <variable
            name="meta"
            type="com.merlin.bean.Meta" />
        <import type="com.merlin.util.FileSize"/>
        <import type="android.view.View"/>
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:paddingBottom="1dp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <RelativeLayout
            android:id="@+id/fileBrowser_topRL"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listItemNormal"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/fileBrowser_topBackIV"
                        android:layout_width="@dimen/titleIconSize"
                        android:layout_height="@dimen/titleIconSize"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:visibility="@{vm.isMultiMode()?View.GONE:View.VISIBLE}"
                        android:onClick="@{vm::onClick}"
                        android:src="@drawable/ic_back"/>
                    <ImageView
                        android:id="@+id/fileBrowser_cancelIV"
                        android:layout_width="@dimen/titleIconSize"
                        android:layout_height="@dimen/titleIconSize"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:visibility="@{vm.isMultiMode()?View.VISIBLE:View.GONE}"
                        android:onClick="@{vm::onClick}"
                        android:src="@drawable/cancel_selector"/>
                    <TextView
                        android:text="@{vm.getCurrentMeta().name}"
                        android:textSize="@dimen/textTitle"
                        android:textStyle="bold"
                        android:visibility="@{vm.isMultiMode()?View.GONE:View.VISIBLE}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@{vm.getMultiChooseCount()}"
                        android:textSize="@dimen/textTitle"
                        android:textStyle="bold"
                        android:visibility="@{vm.isMultiMode()?View.VISIBLE:View.GONE}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/fileBrowser_chooseAllIV"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="@{vm::onClick}"
                android:visibility="@{vm.isMultiMode()&amp;&amp;!vm.isAllChoose()?View.VISIBLE:View.GONE}"
                android:src="@drawable/choose_all_selector"
                android:layout_width="@dimen/titleIconSize"
                android:layout_height="@dimen/titleIconSize"/>
            <ImageView
                android:id="@+id/fileBrowser_unChooseAllIV"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="@{vm::onClick}"
                android:visibility="@{vm.isMultiMode()&amp;&amp;vm.isAllChoose()?View.VISIBLE:View.GONE}"
                android:src="@drawable/ic_menu_alls"
                android:layout_width="@dimen/titleIconSize"
                android:layout_height="@dimen/titleIconSize"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="@{vm.isMultiMode()?View.GONE:View.VISIBLE}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/fileBrowser_transmitIV"
                    android:src="@drawable/ic_searchgo_normal"
                    android:onClick="@{vm::onClick}"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/fileBrowser_topSearchIV"
                    android:src="@drawable/ic_searchgo_normal"
                    android:onClick="@{vm::onClick}"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:id="@+id/fileBrowser_menuIV"
                    android:src="@drawable/ic_menu_normal"
                    android:onClick="@{vm::onClick}"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/fileBrowser_cloud_meta_LL"
            android:layout_below="@id/fileBrowser_topRL"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/switch_thumb_activated"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="3dp"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
            <TextView
                android:text='@{"Free:"+FileSize.formatSizeText(vm.getCurrentMeta().freeSpace)+" "+"Total:"+FileSize.formatSizeText(vm.getCurrentMeta().totalSpace)}'
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/textSmall"
                android:singleLine="true"
                android:layout_height="wrap_content"/>
            <HorizontalScrollView
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:scrollbars="none"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@{vm.getCurrentPath()}"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/textSmall"
                    android:layout_height="wrap_content"/>
            </HorizontalScrollView>
        </LinearLayout>
        <View
            android:id="@+id/fileBrowser_meta_dividerV"
            android:background="#34000000"
            android:layout_below="@id/fileBrowser_cloud_meta_LL"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <com.merlin.view.DataListLayout
            android:id="@+id/fileBrowser_listDLV"
            android:layout_width="match_parent"
            binding:viewModel="@{vm}"
            android:layout_below="@id/fileBrowser_meta_dividerV"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="@{vm.isMultiMode()?View.VISIBLE:View.GONE}"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.merlin.view.MenuTextView
                android:id="@+id/fileBrowser_downloadTV"
                android:drawableTop="@drawable/ic_back"
                android:onClick="@{vm::onClick}"
                binding:OnLongClickListener="@{vm}"
                android:text="Download"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <com.merlin.view.MenuTextView
                android:id="@+id/selector_copy"
                android:drawableTop="@drawable/selector_copy"
                android:text="Copy"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:onClick="@{vm::onClick}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <com.merlin.view.MenuTextView
                android:id="@+id/fileBrowser_moveTV"
                android:drawableTop="@drawable/selector_move"
                android:text="Move"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:onClick="@{vm::onClick}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <com.merlin.view.MenuTextView
                android:id="@+id/fileBrowser_deleteTV"
                android:drawableTop="@drawable/selector_delete"
                android:text="Delete"
                android:layout_weight="1"
                android:onClick="@{vm::onClick}"
                android:gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <com.merlin.view.MenuTextView
                android:id="@+id/fileBrowser_moreTV"
                android:drawableTop="@drawable/selector_more"
                android:text="More"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:onClick="@{vm::onClick}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</layout>
