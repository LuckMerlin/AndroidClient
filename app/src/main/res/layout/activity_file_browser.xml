<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.merlin.model.FileBrowserModel" />
        <variable
            name="meta"
            type="com.merlin.bean.ClientMeta" />
        <import type="com.merlin.util.FileSize"/>
        <import type="android.view.View"/>
        <import type="com.merlin.client.R"/>
        <import type="com.merlin.view.Clicker"/>
        <import type="com.merlin.model.FileBrowserModel" alias="Model"/>
    </data>
    <RelativeLayout
        binding:createModel="@{null}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="1dp"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <RelativeLayout
            android:id="@+id/fileBrowser_topRL"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/listItemNormal"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                    <ImageView
                        binding:enableClick="@{true}"
                        android:layout_width="@dimen/titleIconSize"
                        android:layout_height="@dimen/titleIconSize"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:visibility="@{vm.mode==Model.MODE_NORMAL?View.VISIBLE:View.GONE}"
                        android:src="@{R.drawable.selector_back}"/>
                    <ImageView
                        binding:enableClick="@{true}"
                        android:layout_width="@dimen/titleIconSize"
                        android:layout_height="@dimen/titleIconSize"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:visibility="@{vm.mode==Model.MODE_MULTI_CHOOSE||vm.mode==Model.MODE_COPY||vm.mode==Model.MODE_MOVE?View.VISIBLE:View.GONE}"
                        android:src="@{R.drawable.cancel_selector}"/>
                    <include
                        android:id="@+id/fileBrowser_deviceNameTV"
                        binding:device="@{vm.currentClientMeta}"
                        layout="@layout/device_text"
                        android:visibility="@{vm.mode==Model.MODE_MULTI_CHOOSE?View.GONE:View.VISIBLE}" />
                    <TextView
                        android:text="@{` (`+vm.current.length+')'}"
                        android:textSize="@dimen/textTitle"
                        android:textStyle="bold"
                        android:visibility="@{(vm.mode==Model.MODE_MULTI_CHOOSE||(null==vm.currentClientMeta&amp;&amp;vm.current.size()&lt;1))?View.GONE:View.VISIBLE}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@{vm.getMultiChooseCount()}"
                        android:textSize="@dimen/textTitle"
                        android:textStyle="bold"
                        android:visibility="@{vm.mode==Model.MODE_MULTI_CHOOSE?View.VISIBLE:View.GONE}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                binding:enableClick="@{true}"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="@{vm.mode==Model.MODE_MULTI_CHOOSE&amp;&amp;!vm.isAllChoose()?View.VISIBLE:View.GONE}"
                android:src="@{R.drawable.choose_all_selector}"
                android:layout_width="@dimen/titleIconSize"
                android:layout_height="@dimen/titleIconSize"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                binding:enableClick="@{true}"
                android:visibility="@{vm.mode==Model.MODE_MULTI_CHOOSE&amp;&amp;vm.isAllChoose()?View.VISIBLE:View.GONE}"
                android:src="@{R.drawable.ic_menu_alls}"
                android:layout_width="@dimen/titleIconSize"
                android:layout_height="@dimen/titleIconSize"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="@{vm.mode==Model.MODE_NORMAL?View.VISIBLE:View.GONE}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@{R.drawable.selector_menu}"
                    binding:enableClick="@{true}"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/fileBrowser_cloud_meta_LL"
            android:layout_below="@id/fileBrowser_topRL"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/switch_thumb_activated"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
            <TextView
                android:text='@{""+FileSize.formatSizeText(vm.currentClientMeta.free)+"/"+FileSize.formatSizeText(vm.currentClientMeta.total)}'
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/textSmall"
                android:visibility="@{null==vm.currentClientMeta?View.GONE:View.VISIBLE}"
                android:singleLine="true"
                android:layout_height="wrap_content"/>
            <HorizontalScrollView
                android:layout_marginLeft="5dp"
                android:visibility="@{null==vm.currentClientMeta?View.GONE:View.VISIBLE}"
                android:layout_weight="1"
                android:scrollbars="none"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@{vm.current.path}"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/textSmall"
                    android:layout_height="wrap_content"/>
            </HorizontalScrollView>
        </LinearLayout>
        <View
            android:id="@+id/fileBrowser_meta_dividerV"
            android:background="#34ffffff"
            android:layout_below="@id/fileBrowser_cloud_meta_LL"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <FrameLayout
            android:id="@+id/fileBrowser_bottom_root_FL"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:visibility="@{vm.mode==Model.MODE_COPY?View.VISIBLE:View.GONE}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fileBrowser_bottom_paste_TV"
                    android:text="@{R.string.paste}"
                    binding:enableClick="@{true}"
                    android:layout_weight="1"
                    style="@style/buttonStyle"/>
                <TextView
                    android:id="@+id/fileBrowser_bottom_cancel_TV"
                    android:text="@{R.string.cancel}"
                    binding:enableClick="@{true}"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    style="@style/buttonStyle"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:visibility="@{vm.mode==Model.MODE_MOVE?View.VISIBLE:View.GONE}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@id/fileBrowser_bottom_paste_TV"
                    android:text="@{R.string.paste}"
                    binding:enableClick="@{true}"
                    android:layout_weight="1"
                    style="@style/buttonStyle"/>
                <TextView
                    android:id="@id/fileBrowser_bottom_cancel_TV"
                    android:text="@{R.string.cancel}"
                    binding:enableClick="@{true}"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    style="@style/buttonStyle"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:visibility="@{vm.mode==Model.MODE_MULTI_CHOOSE?View.VISIBLE:View.GONE}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.merlin.view.MenuTextView
                    android:id="@+id/fileBrowser_downloadTV"
                    android:drawableTop="@drawable/ic_back"
                    android:text="Download"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <com.merlin.view.MenuTextView
                    android:id="@+id/selector_copy"
                    android:drawableTop="@drawable/selector_copy"
                    android:text="Copy"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <com.merlin.view.MenuTextView
                    android:id="@+id/fileBrowser_moveTV"
                    android:drawableTop="@drawable/selector_move"
                    android:text="Move"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <com.merlin.view.MenuTextView
                    android:id="@+id/fileBrowser_deleteTV"
                    android:drawableTop="@drawable/selector_delete"
                    android:text="Delete"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <com.merlin.view.MenuTextView
                    android:id="@+id/fileBrowser_moreTV"
                    android:drawableTop="@drawable/selector_more"
                    android:text="More"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_above="@id/fileBrowser_bottom_root_FL"
            android:layout_below="@id/fileBrowser_meta_dividerV"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                binding:adapter="@{vm.browserAdapter}"
                android:layout_height="match_parent"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>
</layout>
