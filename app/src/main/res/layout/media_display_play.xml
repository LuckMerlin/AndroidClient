<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.merlin.model.MediaPlayModel" />
        <import type="com.merlin.player.Status"/>
        <import type="com.merlin.player.Time"/>
    </data>
    <RelativeLayout
        android:id="@+id/media_display_play_rootRL"
        binding:createModel="@{true}"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/mediaPlayBottomRL"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/mediaPlayBottomPositionTV"
                        android:textColor="@color/textTitle"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/mediaPlayBottomDurationTV"
                        android:text="@{Time.formatTime(vm.model.playing.duration)}"
                        android:textColor="@color/textTitle"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"/>
                    <SeekBar
                        android:id="@+id/mediaPlayBottomProgressSB"
                        android:layout_toLeftOf="@id/mediaPlayBottomDurationTV"
                        android:layout_toRightOf="@id/mediaPlayBottomPositionTV"
                        android:progress="@{vm.model.progress}"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:maxHeight="4.0dip"
                        android:minHeight="4.0dip"
                        android:paddingLeft="16.0dip"
                        android:paddingRight="16.0dip"
                        android:progressDrawable="@drawable/seekbar"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/activityMediaPlay_playModeIV"
                        binding:enableMultiClick="@{true}"
                        android:src="@drawable/single_normal"
                        android:layout_margin="8dp"
                        android:layout_width="@dimen/iconSizeSmall"
                        android:layout_height="@dimen/iconSizeSmall"/>

                    <ImageView
                        android:id="@+id/activityMediaPlay_preIV"
                        binding:enableMultiClick="@{true}"
                        android:src="@drawable/selector_pre"
                        android:layout_margin="8dp"
                        android:layout_width="@dimen/iconSizeMedium"
                        android:layout_height="@dimen/iconSizeMedium"/>

                    <ImageView
                        android:id="@+id/activityMediaPlay_playPauseIV"
                        android:src="@{vm.model.status==Status.STATUS_PLAYING||vm.model.status==Status.STATUS_PROGRESS?@drawable/selector_media_pause:@drawable/selector_media_play}"
                        binding:enableMultiClick="@{true}"
                        android:layout_margin="8dp"
                        android:layout_width="@dimen/iconSizeLarge"
                        android:layout_height="@dimen/iconSizeLarge"/>

                    <ImageView
                        android:id="@+id/activityMediaPlay_nextIV"
                        android:src="@drawable/selector_next"
                        binding:enableMultiClick="@{true}"
                        android:layout_margin="8dp"
                        android:layout_width="@dimen/iconSizeMedium"
                        android:layout_height="@dimen/iconSizeMedium"/>

                    <ImageView
                        android:src="@drawable/selector_menu"
                        android:layout_margin="8dp"
                        android:layout_width="@dimen/iconSizeSmall"
                        android:layout_height="@dimen/iconSizeSmall"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_above="@id/mediaPlayBottomRL"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/album_default"
                    android:alpha="0.3"
                    android:layout_marginBottom="20dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/heart_normal"
                        android:layout_margin="10dp"
                        android:layout_width="@dimen/iconSizeLittle"
                        android:layout_height="@dimen/iconSizeLittle"/>
                    <ImageView
                        android:src="@drawable/download_media_normal"
                        android:layout_margin="10dp"
                        android:layout_width="@dimen/iconSizeLittle"
                        android:layout_height="@dimen/iconSizeLittle"/>
                    <ImageView
                        android:id="@+id/activityMediaPlay_addToSheetIV"
                        android:src="@drawable/add_to_sheet_pressed"
                        binding:enableMultiClick="@{true}"
                        android:layout_margin="10dp"
                        android:layout_width="@dimen/iconSizeLittle"
                        android:layout_height="@dimen/iconSizeLittle"/>

                    <ImageView
                        android:src="@drawable/share_normal"
                        android:layout_margin="10dp"
                        android:layout_width="@dimen/iconSizeLittle"
                        android:layout_height="@dimen/iconSizeLittle"/>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>
