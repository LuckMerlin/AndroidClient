<resources>
    <style name="titleSubNormalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textTitleSub</item>
        <item name="android:textSize">@dimen/textTitleSub</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="editTextNormal" parent="titleNormalTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:minHeight">43dp</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="titleSmallTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textTitleSub</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="smallNormalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textNormal</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="horizontalDividerLine">
        <item name="android:background">#34ffffff</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="checkboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
        <item name="android:layout_width">@dimen/listIconNormal</item>
        <item name="android:layout_height">@dimen/listIconNormal</item>
    </style>

    <style name="taskActivityStyle" parent="android:Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>
</resources>
